<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Login">

    <include
        android:id="@+id/Citizen_Login_Page_Bar"
        layout="@layout/app_bar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Citizen_Login_Page_Bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_complaint_app_logo"
                android:contentDescription="Logo" />

            <EditText
                android:id="@+id/Login_Citizen_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="24dp"
                android:hint="Email"
                android:textColor="#000000"
                android:textSize="24sp"
                android:drawableEnd="@drawable/ic_email"
                android:background="@drawable/bottom_black_line_background"
                />

            <EditText
                android:id="@+id/Login_Citizen_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="24dp"
                android:hint="Password"
                android:textSize="24sp"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/ic_password"
                android:background="@drawable/bottom_black_line_background"/>

            <Button
                android:id="@+id/Login_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Login"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:background="@drawable/custom_button_0"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/Create_Account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Account"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/Forgot_Password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_toEndOf="@+id/Create_Account"
                    android:text="Forgot Password?"
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/To_Open_Corporation_Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Login as Corporation"
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
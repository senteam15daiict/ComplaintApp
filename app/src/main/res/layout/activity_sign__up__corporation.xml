<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Sign_Up_Corporation">

    <include
        android:id="@+id/Corporation_Sign_Up_Page_bar"
        layout="@layout/app_bar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Corporation_Sign_Up_Page_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_complaint_app_logo"
                android:contentDescription="Logo" />

            <EditText
                android:id="@+id/Corporation_User_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="24dp"
                android:hint="User Name"
                android:textSize="24sp"
                android:drawableEnd="@drawable/ic_profile"
                android:background="@drawable/bottom_black_line_background"/>

            <EditText
                android:id="@+id/Corporation_Phone_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="24dp"
                android:hint="Phone Number"
                android:textSize="24sp"
                android:inputType="phone"
                android:drawableEnd="@drawable/ic_phone"
                android:background="@drawable/bottom_black_line_background"/>

            <EditText
                android:id="@+id/Corporation_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="24dp"
                android:hint="Email"
                android:textColor="#000000"
                android:textSize="24sp"
                android:drawableEnd="@drawable/ic_email"
                android:background="@drawable/bottom_black_line_background"/>

            <EditText
                android:id="@+id/Corporation_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="24dp"
                android:hint="Password"
                android:textSize="24sp"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/ic_password"
                android:background="@drawable/bottom_black_line_background"/>

            <EditText
                android:id="@+id/Corporation_Security_Key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="24dp"
                android:hint="Security Key"
                android:textSize="24sp"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/ic_password"
                android:background="@drawable/bottom_black_line_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="2dp"
                android:layout_marginTop="24dp">

                <Spinner
                    android:id="@+id/Corporation_Country"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"/>

                <Spinner
                    android:id="@+id/Corporation_State"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"/>

                <Spinner
                    android:id="@+id/Corporation_District"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/Corporation_Sign_Up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="24dp"
                android:padding="5dp"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:background="@drawable/custom_button_0"/>

            <TextView
                android:id="@+id/Corporation_Login_Screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="Already Have an Account? Click here"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Corporation_Register_As_Citizen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Register as Citizen"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>